<icegrid>

  <application name="Simple">

    <node name="node1">

      <server id="SimpleServer" exe="dotnet" activation="on-demand">
        <option>FootStone.Core.GameServer.dll</option>
        <adapter name="Player" endpoints="tcp -h 192.168.3.28">
          <object identity="player" type="::FootStone::GrainInterfaces::Player" property="Identity"/>
        </adapter>

        <property name="IceMX.Metrics.Debug.GroupBy" value="id"/>
        <property name="IceMX.Metrics.Debug.Disabled" value="0"/>
        <property name="IceMX.Metrics.ByParent.GroupBy" value="parent"/>
        <property name="IceMX.Metrics.ByParent.Disabled" value="1"/>
      </server>
    </node>

  </application>

</icegrid>
